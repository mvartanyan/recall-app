{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Recall",
  "version": "0.1.0",
  "identifier": "com.example.recall",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src"
  },
  "app": {
    "windows": [
      {
        "title": "Recall",
        "width": 900,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "localhost",
      "infoPlist": "<key>NSMicrophoneUsageDescription</key><string>Recall needs microphone access to record audio.</string>"
    }
  }
}
